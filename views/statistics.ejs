<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="img/icons/logo.png" type="image/icon">
  <link rel="stylesheet" href="/css/statistics.css" />
  <!-- google charts api -->
  <script src="https://www.gstatic.com/charts/loader.js"></script>
  <title>Placement Statistics</title>
</head>

<body>
  <%- include('templates/header-1.ejs') -%>


    <div class="container container1">
      <div class="text-center h1">Statistics</div>
    </div>

    <div class="container container2 mt-5">
      <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 scaler">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="outer outer-1 ">
              <div class="inner" style="font:inter; color: black;">
                <div class="inner-text text-center ">97%</div>
              </div>
            </div>
            <div class="mt-3 text-center p-4"
              style="color: black; font-weight: 300;font: Inter;font-style: normal; font-size: 1.5rem;"><b>2021-2022</b>
            </div>
          </div>
        </div>

        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 scaler">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="outer outer-2">
              <div class="inner">
                <div class="inner-text text-center">88%</div>
              </div>
            </div>
            <div class="mt-3 text-center"
              style="color: black; font-weight: 300;font: Inter;font-style: normal; font-size: 1.5rem;"><b>2020-2021</b>
            </div>


          </div>
        </div>

        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 scaler">
          <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="outer outer-3">
              <div class="inner">
                <div class="inner-text text-center">74%</div>
              </div>
            </div>
            <div class="mt-3 text-center"
              style="color: black; font-weight: 300;font: Inter;font-style: normal; font-size: 1.5rem;"><b>2019-2020</b>
            </div>


          </div>
        </div>


      </div>
    </div>

    <div class="text-center mb-5"
      style="color: black; font-weight: 450;font: Inter;font-style: normal; font-size: 1.5rem;">Percentage of students
      placed</div>


    <h2 class="text-center ml-5 mb-3">Placement Statistics 2021-2022</h2>
    <div class="d-flex justify-content-center mb-3">
      <table class="table" id="my-table">
        <tr class="my-th">
          <th scope="col">Details</th>
          <th scope="col">Numbers</th>
        </tr>
        <tr class="table-row">
          <td>No. of students registered for the Placements</td>
          <td>286</td>
        </tr>
        <tr>
          <td>No. of offers received</td>
          <td>279</td>
        </tr>
        <tr>
          <td>Percentage of offers received</td>
          <td>97.55</td>
        </tr>
      </table>
    </div>
    <h2 class="text-center my-color mb-4">97% Students received Placement offers</h2>

    <div class="d-flex justify-content-around">
      <table class="table" id="my-table-2">
        <thead>
          <tr class="my-th">
            <th scope="col">Branch</th>
            <th scope="col">No. of Offers</th>
            <th scope="col">Average CTC (in LPA)</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Computer Science and Engineering</td>
            <td>92</td>
            <td>13.20</td>
          </tr>
          <tr>
            <td>Electronics and Communications Engineering</td>
            <td>94</td>
            <td>11.37</td>
          </tr>
          <tr>
            <td>Mechanical Engineering</td>
            <td>46</td>
            <td>7.95</td>
          </tr>
          <tr>
            <td>Mechanical Smart Manufacturing</td>
            <td>50</td>
            <td>10.17</td>
          </tr>
        </tbody>
      </table>

      <!-- Table-2 -->
      <div>
        <table class="table" id="my-table-2">
          <thead>
            <tr class="my-th">
              <th scope="col">Course</th>
              <th scope="col">No. of Offers</th>
              <th scope="col">Average CTC (in LPA)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>B Tech</td>
              <td>175</td>
              <td>10.2</td>
            </tr>
            <tr>
              <td>Dual Degree</td>
              <td>60</td>
              <td>12</td>
            </tr>
            <tr>
              <td>M Tech</td>
              <td>47</td>
              <td>8.69</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    </div>
    <div class="d-flex justify-content-around">
      <div id="branch-wise" style="width:31rem ;height:25rem;" class="text-center"> </div>
      <div id="degree-wise" style="width: auto;height:auto"></div>
    </div>
    <%- include('templates/footer-1.ejs') -%>

      <!-- Include jQuery -->
      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
      <script src="/scripts/statistics.js"></script>
    <script>
      // for media screen
      $(window).resize(function () {
        if ($(window).width() < 770) {
          console.log("mobile");
          $('#branch-wise').css('width', '450');
          $('#branch-wise').css('height', 'auto');
          $('#degree-wise').css('width', '450');
          // add class to $('.d-flex')
          $('.d-flex').addClass('align-items-center');
        } else {
          console.log("desktop");
          $('#branch-wise').css('width', '500px');
          $('#degree-wise').css('width', 'auto');
          // remove class to $('.d-flex')
          $('.d-flex').removeClass('align-items-center');
        }
      }).resize();
    </script>
</body>

</html>